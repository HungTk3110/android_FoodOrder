<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp">
    <LinearLayout
        android:id="@+id/layout_rcv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_rcvCategory"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@color/common_google_signin_btn_text_light_default"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/tv_rcvCategory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="trà sữa"
            android:paddingTop="10dp" />
        <TextView
            android:id="@+id/tv_rcvCategory_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="125,000đ"
            android:paddingTop="10dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>